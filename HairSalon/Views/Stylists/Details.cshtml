@{ Layout = "_Layout"; } 

@using ClairesHairSalon.Models
@model ClairesHairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<h3>
  @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)
<h3>
<h3>
  @Html.DisplayNameFor(model => model.Age): @Html.DisplayFor(model => model.Age)
</h3>
<h3>
  @Html.DisplayNameFor(model => model.HomeTown): @Html.DisplayFor(model => model.HomeTown)
</h3>
<h3>
    @Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)
</h3>

    <h3>Stylist's Clients:</h3>

    <ul>
      @foreach (Client client in Model.Clients) 
      {
        <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId})</li>
      }
    </ul>

    <p>
      @Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })
    </p>
    <p>
      @Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })
    </p>
    <p>@Html.ActionLink("Back to list", "Index")</p>
  </h3>
</h3>